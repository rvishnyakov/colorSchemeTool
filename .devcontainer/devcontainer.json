//
// Dev Container file to convert TextMate/VS Code themes to IntelliJ color schemes
// The resulting output will be stored in intellijThemes
//
// (c) JetBrains GmbH, 2025
//
{
  "name": "Color Scheme Tool",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  "customizations": {
    "jetbrains": {
      "backend": "PyCharm",
      "plugins" : [
        "izhangzhihao.rainbow.brackets"
      ],
      "settings" : {
        "com.intellij:app:VcsApplicationSettings.create_changelists_automatically": true
      }
    },
  },
  features: {
    "ghcr.io/devcontainers/features/node" : {},
  },
  remoteUser: "root"
}
